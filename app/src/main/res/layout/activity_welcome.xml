<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WelcomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/to_drag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="仿微信添加删除图片拖动效果"/>

        <Button
            android:id="@+id/to_drawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DrawerLayout抽屉滑动效果"/>

        <Button
            android:id="@+id/to_use_dagger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="学习使用Dagger注解和约束布局"/>

        <Button android:id="@+id/to_scrolling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CoordinatorLayout学习"/>

        <Button android:id="@+id/to_bezier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="贝塞尔曲线学习"/>

        <Button android:id="@+id/to_use_rxfus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="带背压RxBus学习"/>

    </LinearLayout>

</ScrollView>